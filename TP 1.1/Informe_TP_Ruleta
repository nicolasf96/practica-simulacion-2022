	\section{Formulas}
		\subsection{Frecuencia Relativa}
		\begin{LARGE}
		$f_{r}=\frac{1}{n} $
		\end{LARGE}	
		\subsection{Promedio}
		\begin{LARGE}
		$\mu=\frac{1}{n} *\sum\limits_{i=1}^{n}{x_{i}}= \frac{x_{1}+x_{2}+...+x_{n}}{n}$
		\end{LARGE}
	\subsection{Desvio estandar}
	\begin{LARGE}
	$ \sigma^{2}= \frac{1}{n} *\sum\limits_{i=1}^{n}{(x_{i}-\mu)^{2}} $
	\end{LARGE}
	\subsection{Varianza}
	\begin{LARGE}
	$ \sigma=\sqrt{\frac{1}{n} *\sum\limits_{i=1}^{n}{(x_{i}-\mu)^{2}}} $
	\end{LARGE}
